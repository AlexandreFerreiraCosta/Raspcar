<Window x:Class="Rasp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rasp"
        mc:Ignorable="d"
        Title="RaspCar"  Height="380" Width="350">

    <StackPanel Margin="15">
        <Image Source="C:\Users\Alexandre\Documents\Rasp\Rasp\Images\ifes.jpg" Height="150" Width="200"/>
        <Label Target="{Binding ElementName=txtServidor}">
            <StackPanel Orientation="Horizontal">
                <Image Source="http://cdn1.iconfinder.com/data/icons/fatcow/16/bullet_green.png" />
